<div class="container">
<br>
  <% flash.each do |name, msg| %>
  <center><div id="success" class="alert alert-danger alert-dismissible fade show" >
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div></center>

  <% end %>
  <div class="page-header">
  <center>  <h6><b>Employee Details</b></h6></center>
</div>
<br>
<div class="container" style = "background:white">

<table class="table table-bordered-sm">

   <thead class="table-info">
    <tr align="center">
      <th>Employee Name</th>
      <th>Email-ID</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Desgination</th>
      <th>Project Name</th>
      <th></th>
      <th>Action</th>
      <th ></th>
    </tr>
  </thead>

  <tbody style = "color: #666666">
    <% @employees.each do |employee| %>
      <tr align="center">
        <td ><%= employee.employee_name %></td>
        <td ><%= employee.email_id%></td>
        <td><%= employee.age %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.desgination %></td>
          <td><%= employee.project_name %></td>
        <td><%= link_to ('<i class= "far fa-eye"></i>').html_safe, employee ,class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to ('<i class= "fas fa-edit"></i>').html_safe, edit_employee_path(employee),class: "btn btn-info btn-sm" %></td>
        <td><%= link_to ('<i class= "fas fa-trash"></i>').html_safe, employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
